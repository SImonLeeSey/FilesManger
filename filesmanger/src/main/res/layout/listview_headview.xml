<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/ll_files"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@mipmap/bmp" />

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="图片" />

            <TextView
                android:singleLine="true"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="信息" />
        </LinearLayout>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1sp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/video" />

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="视频" />

            <TextView
                android:singleLine="true"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="信息" />
        </LinearLayout>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1sp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/ll_mp3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/mp3" />
            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="音乐" />

            <TextView
                android:singleLine="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="信息" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/ll_apk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@mipmap/apk" />

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="应用" />

            <TextView
                android:singleLine="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="信息" />
        </LinearLayout>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1sp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/ll_doc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/doc" />

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="文档" />

            <TextView
                android:singleLine="true"
                android:textColor="@android:color/holo_purple"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="信息" />
        </LinearLayout>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1sp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:id="@+id/ll_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/other" />
            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="其它" />

            <TextView
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:text="信息" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>

</LinearLayout>